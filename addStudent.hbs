<!DOCTYPE html>
<html>
<head>
  <title>Add Student</title>
</head>
<body>
  <h1>Add a New Student</h1>
  <form action="/students/add" method="POST">
    <label for="studentNum">Student Number:</label>
    <input type="text" id="studentNum" name="studentNum" required>
    <br>
    <label for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" required>
    <br>
    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" required>
    <br>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
    <br>
    <label for="addressStreet">Address Street:</label>
    <input type="text" id="addressStreet" name="addressStreet" required>
    <br>
    <label for="addressCity">Address City:</label>
    <input type="text" id="addressCity" name="addressCity" required>
    <br>
    <label for="addressProvince">Address Province:</label>
    <input type="text" id="addressProvince" name="addressProvince" required>
    <br>
    <label for="status">Status:</label>
    <input type="text" id="status" name="status" required>
    <br>
    <label for="course">Course:</label>
    <input type="text" id="course" name="course" required>
    <br>
    <input type="submit" value="Add Student">
  </form>
</body>
</html>
